{# Barra lateral #}
{% if session is not defined%}
<form class="well">
    <label for="login">Login</label>
    <input name="login" id="login" type="text" class="input-medium"/>
    <label for="password">Password</label>
    <input name="password" id="password" type="password" class="input-medium"/>
    <input type="submit" class="btn" value="Entrar"/>
</form>
{%else %}
<div class="well">
    <h3>Hola, {{ session.usuario.Nombre|title~' '~session.usuario.Apellido }}</h3>
</div>
{% endif %}
<div class="well sidebar-nav">
    <ul class="nav nav-list">
        <li class="nav-header">Producto</li>
        <li><a href="{{ constant("URL_SISTEMA")}}/producto/listar">Listar</a></li>
        <li><a href="{{ constant("URL_SISTEMA")}}/producto/crear">Crear</a></li>
    </ul>
</div><!--/.well -->