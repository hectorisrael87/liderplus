{% extends 'layout/fluid.html.twig' %}
{# TITULO#}
{% block titulo 'Listar Empresa de Transporte' %}

{# JAVASCRIPT #}
{% block include%}
<script type="text/javascript" src="{{constant('ROOT')}}/js/jquery-1.7.1.min.js"></script>
<script type="text/javascript" src="{{constant('ROOT')}}/js/listado.js"></script>
{% endblock %}

{# CONTENIDO#}
{% block contenido %}
<div class="page-header">
    <h1>{{ accion|title }} Empresa de Transporte</h1>
</div>
<ul class="breadcrumb">
    <li><a href="{{constant('URL_SISTEMA')}}/usuario">Sistema</a><span class="divider">&raquo;</span></li>
    <li><a href="{{constant('URL_SISTEMA')}}/transporte/listar">Empresa Transporte</a><span class="divider">&raquo;</span></li>
    <li>{{ accion|title }}</li>
</ul>
{%if mensaje is defined%}
<div class="alert alert-{{tipoMensaje}}">
    <a data-dismiss="alert" class="close" data-dismiss="alert">×</a>
    <p>{{ mensaje }}</p>
</div>
{% endif %}

<div>
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>Nombre/Razón Social</th>
                <th>Rif</th>
                <th>Estado</th>
                <th>Ciudad</th>
                <th>Dirección</th>
                <th>Telf. Ofc.</th>
                <th>Celular</th>
                <th>Contacto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for transporte in registros %}
                <tr>
                    <td>{{ transporte.id}}</td>
                    <td>{{ transporte.nombre}}</td>
                    <td>{{ transporte.rif}}</td>
                    <td>{{ transporte.estado }} </td>
                    <td>{{ transporte.ciudad }} </td>
                    <td>{{ transporte.direccion }}</th>
                    <td>{{ transporte.telefono_oficina}}</th>
                    <td>{{ transporte.telefono_celular}}</th>
                    <td>{{ transporte.persona_contacto}}</th>
                    <td>
                        <div class="btn-group">
                            <a href="{{constant('URL_SISTEMA')}}/transporte/consultar/{{ transporte.id }}" class="btn">Consultar</a>
                            <a href="{{constant('URL_SISTEMA')}}/transporte/editar/{{ transporte.id }}" class="btn btn-info">Editar</a>
                            <a href="{{constant('URL_SISTEMA')}}/transporte/borrar/{{ transporte.id }}" class="btn btn-danger">Borrar</a>
                        </div> 
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">No se encontraron registros.</td>
                </tr>
            {% endfor%}
            </tbody>
        </table>
        <div>
        {{ paginacion|raw }}
            </div>
        <div>
            <a href="{{constant('URL_SISTEMA')}}/transporte/crear" class="btn btn-primary">Crear Empresa Transporte</a>
        </div>
    </div>
{% endblock %}